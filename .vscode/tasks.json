{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "compile MPI",
            "type": "shell",
            "command": "mpicxx",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Compile MPI program"
        },
        {
            "label": "run MPI",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "chcp 65001 > nul && mpiexec -n 5 \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "dependsOn": "compile MPI"
        },
        {
            "label": "compile CreateProcess with FIXED",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "C:\\msys64\\ucrt64\\bin\\g++.exe -fdiagnostics-color=always -g \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" -Wl,--image-base=0x400000 -Wl,--disable-dynamicbase"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Compile with fixed base address (no relocs)"
        },
        {
            "label": "run CreateProcess",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "chcp 65001 > nul && \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "dependsOn": "compile CreateProcess with FIXED",
            "detail": "Compile and run CreateProcess program"
        }
    ]
}